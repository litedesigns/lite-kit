{
  "name": "@litedesigns/lite-kit",
  "version": "1.1.1",
  "description": "Shared component library for LiteDesigns projects",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles": "./src/styles/index.css"
  },
  "files": [
    "dist",
    "src/styles"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "release": "./scripts/release.sh",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^10.2.4",
    "@storybook/addon-docs": "^10.2.4",
    "@storybook/react-vite": "^10.2.4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.19.30",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/ui": "^2.1.9",
    "autoprefixer": "^10.4.24",
    "jsdom": "^24.1.3",
    "postcss": "^8.5.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^10.2.4",
    "tailwindcss": "^4.1.18",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.1.9"
  },
  "keywords": [
    "react",
    "components",
    "accordion",
    "ui"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/litedesigns/lite-kit"
  },
  "author": "LiteDesigns",
  "license": "MIT"
}
